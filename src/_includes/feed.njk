{% extends "blogbase.njk" %}

{% block meta %}
<meta name="robots" content="noindex,follow" />
{% endblock %}

{% block content %}
<main class="main">
<div class="h-feed feed">
<header class="main__header">
  <div class="row">
    <h1 class="main__title">{{ title }}</h1>
    <a class="rowitem--right" title="Subscribe via Atom" href="{{rss}}"><span class="fa fa-rss-square"></span></a>
  </div>
</header>
{{ content | safe }}
</div>
</main>
{% endblock content %}
