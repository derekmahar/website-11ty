{% extends "blogbase.njk" %}

{% block meta %}
<meta name="robots" content="noindex,follow" />
{% endblock %}

{% block content %}
<main class="main">
<div class="h-feed feed">
<div class="row">
  <h1>{{ title }}</h1>
  <a class="rowitem--right" title="Subscribe via Atom" href="{{rss}}"><span class="fa fa-rss-square"></span></a>
</div>
{{ content | safe }}
</div>
</main>
{% endblock content %}
