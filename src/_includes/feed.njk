{% extends "blogbase.njk" %}

{% block meta %}
<meta name="robots" content="noindex,follow" />
{% endblock %}

{% block content %}
<main class="main">
<div class="h-feed feed">
<header>
  <div class="row">
    <h1>{{ title }}</h1>
    <a class="row__item--right" title="Subscribe via Atom" href="{{rss}}"><span class="fa fa-rss-square"></span></a>
  </div>
  <div class="feed__description">{{ description }}</div>
</header>
{{ content | safe }}
</div>
</main>
{% endblock content %}
