{% from "avatar.njk" import avatar %}
<div class="row">
  <a href="{{ link.url }}">
    <i class="fas fa-external-link-alt"></i>
  </a>
  {{ avatar(link.author.photo) }}
  <a href="{{ link.author.url }}">{{ link.author.name }}</a>
  &middot;
  <span>{{ link.published | date  }}</span>
</div>

<article class="wm-group--content">
  {% if link.content.html %}
  {{ link.content.html | safe }}
  {% else %}
  {{ link.content.text }}
  {% endif %}
</article>
