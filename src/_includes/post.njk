{% extends "blogbase.njk" %}

{% from "photo.njk" import photo as photom %}
{% from "reflink.njk" import reflink %}
{% from "entry-header.njk" import entryheader %}

{% block content %}
<main class="main">
<div class="h-entry entry">
  
  {{ entryheader(date, page.url, title, 1) }}
  
  {% if blurb %}
  <div class="p-summary" style="display: none">
  {{blurb}}
  </div>
  {% endif %}

  <div class="e-content">

  {{ reflink(postType, referencedLink) }}
  
  {% for mention in bridgyMentions %}
  <a href="{{mention}}"></a>
  {% endfor %}

  {{ content | safe }}
  
  {% if photo %}
  {{ photom(photo) }}
  {% endif %}

  {% if postType != 'article' %}
  {% set link = referencedLink or (content | content_link) %}
  {% if link %}
  {% set scraped = link | preview(link | slug) %}
  {% include "preview.njk" %}
  {% endif %}
  {% endif %}
  </div>
  {% set url = page.url | strip_ext %} 
  {% set expand = true %}
  {% include "entry-footer.njk" %}
</div>
</main>
{% endblock %}
