{% from "avatar.njk" import avatar %}

{% set meta = preview_data.meta %}
<blockquote cite="{{ link }}" class="h-cite cite link-context__indieweb_context">

{% if meta.published %}
{% set published = meta.published %}
{% elif meta["published-str"] %}
{% set published = meta["published-str"] %}
{% endif %}

{% if meta.author or published %}
<div class="post-info__header row">
  {% if meta.author.photo %}
  <img src="{{ meta.author.photo }}" class="u-photo avatar"/>
  {% endif %}
  <div>
    {% if meta.author %}
    {% set author = meta.author %}
    <div>
      {% if author.name and author.url %}
      <a class="post-info__author" href="{{author.url}}">{{author.name}}</a>
      {% elif author.url %}
      <a class="post-info__author" href="{{author.url}}">{{author.url}}</a>
      {% elif author.name %}
      <span class="post-info__author">{{ author.name }}</span>
      {% endif %}
    </div>
    {% endif %}
    {% if published %}
    <div>
      <span class="post-info__published">{{ published | date }}</span>
    </div>  
    {% endif %}
  </div>
</div>
{% endif %}

{% if meta.name %}<h1><strong>{{ meta.name }}</strong></h1>{% endif %}

{% if meta.summary or meta['content-plain'] %}
<div class="post-info__content">
{% if meta.summary %}
{{ meta.summary }}
{% elif meta['content-plain'] %}
{{ meta['content-plain'] | truncate }}
{% endif %}
</div>
{% endif %}
</blockquote>
